{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "height": 500,
    "data": {"url": "https://raw.githubusercontent.com/JamesE23/FIT3179-Assignment2-James/main/data/InternetUsersEdit.csv"},
    "layer": [{
      "params": [{
        "name": "brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "mark": "bar",
      "encoding": { 
        "x": { 
          "field": "Country", 
          "type": "nominal", 
          "title": "Country"
          
        },
        "y": {
          "aggregate": "mean",
          "field": "Percentage",
          "type": "quantitative"
        },
        "opacity": {
          "condition": {
            "param": "brush", "value": 1
          },
          "value": 0.7
        }
      }
    }, {
      "transform": [{
        "filter": {"param": "brush"}
      }],
      "mark": "rule",
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "Percentage",
          "type": "quantitative"
        },
        "color": {"value": "firebrick"},
        "size": {"value": 3}
      }
    }]
  }
  